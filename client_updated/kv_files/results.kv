<ResultsScreen>:
    name: "resultsScreen"
    md_bg_color: [0,0,0,0.5]
    MDCard:
        style: "elevated"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .9, .85
        shadow_color: "green"
        theme_bg_color: "Custom"
        md_bg_color: "white"
        elevation_level: 2

        BoxLayout:
            orientation: "vertical"
            size_hint: .8, .9
            pos_hint: {"center_x":.5, "top":0.95}
            spacing: "5dp"
            padding: ["3dp", "10dp", "3dp", "10dp"]

            MDLabel:
                id: message
                size_hint: 1, .2
                pos_hint: {"center_x":.5, "top":.9}
                halign: "center"
            
            MDLabel:
                id: result
                size_hint: 1, .2
                halign: "center"

            BoxLayout:
                size_hint: 1, .4
            
            MDButton:
                id: result_btn
                mode: "elevated"
                theme_width: "Custom"
                size_hint_x: .6
                pos_hint: {"center_x":.5, "top":.8}
                on_release: 
                    root.manager.current = 'learnMode'

                MDButtonText:
                    text: "Finish test"
                    
