<LearningSet>:
    name: "learnSet"
    md_bg_color: [0,0,0,0.5]
    MDCard:
        style: "elevated"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .9, .85
        shadow_color: "green"
        theme_bg_color: "Custom"
        md_bg_color: "white"
        elevation_level: 2
    
        BoxLayout:
            orientation: "vertical"
            pos_hint: {"center_x":.5, "top":.95}
            size_hint: .9, .8
            spacing: "5dp"

            MDLabel:
                text: "Choose your learning set"
                height: "30dp"
                halign: "center"

            MDScrollView:
                id: set_list
                do_scroll_x: False
                do_scroll_y: True
                pos_hint: {"center_x":.5, "top":1}