#:kivy 1.11.1

<Learning>:
    name: "learningHome"

    GridLayout:

        rows: 2
        size_hint: .9, .9
        pos_hint: {"center_x":.5, "top":0.95}
        spacing: "5dp"
        
        MDLabel:
            text: "What do you want to learn today, user?"
            halign: "center"
            size_hint: 1, .2
            font_name: "preah"
            font_size: "25dp"

        GridLayout:

            rows: 3
            size_hint: 1, .8
            pos_hint: {"center_x":.5, "top":1}
            spacing: "5sp"
            
            MDRaisedButton:
                text: "Conjugation"
                font_name: "preah"
                font_size: "25dp"
                size_hint: .95, 0.25
                pos_hint: {"center_x":.5}
                md_bg_color: app.theme_cls.primary_color
                on_release: 
                    root.manager.current = "conjHome"

            MDRaisedButton:
                text: "Past forms"
                font_name: "preah"
                font_size: "25dp"   
                size_hint: .95, 0.25
                pos_hint: {"center_x":.5}
                md_bg_color: app.theme_cls.primary_color
                on_release: 
                    root.manager.current = "pforHome"

            MDRaisedButton:
                text: "Rection"
                font_name: "preah"
                font_size: "25dp"
                size_hint: .95, 0.25
                pos_hint: {"center_x":.5}
                md_bg_color: app.theme_cls.primary_color
                on_release: 
                    root.manager.current = "recHome"