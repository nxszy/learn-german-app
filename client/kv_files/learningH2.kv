#:kivy 1.11.1

<LearningHome2>:

    canvas.before:
        Color:
            rgba: 0,0,0,0.6
        Rectangle:
            pos: self.pos
            size: self.size

    name: "learningHome2"

    MDCard:
        orientation: "vertical"
        size_hint: .9, .9
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 2

        GridLayout:
            id: mainLayout
            rows: 2
            size_hint: .9, .9
            pos_hint: {"center_x":.5, "center_y":.5}

            MDLabel:
                text: "Choose your learning set"
                size_hint: 1, .2
                pos_hint: {"center_x":.5}
                valign: "center"
                font_name: "preah"
                font_size: "25dp"

            ScrollView:
                id: setList
                do_scroll_x: False
                do_scroll_y: True
                pos_hint: {"center_x":.5, "top":1}
                size_hint: 1, .7
