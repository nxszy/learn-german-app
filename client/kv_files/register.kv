#:kivy 1.11.1

<Register>:
    name: "register"
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

    MDCard:
        orientation: "vertical"
        size_hint: 0.8, 0.65
        pos_hint: {"center_x":0.5, "center_y":0.5}
        elevation: 5
        FloatLayout:
            pos_hint: {"center_x":.5, "center_y":.5}
            size_hint: 1, .9
            MDIconButton:
                icon: "arrow-left-bold-circle-outline"
                pos_hint: {"x":.05, "top":1}
                elevation: 8
                on_release: 
                    root.manager.current = "login"
                theme_text_color: "Hint"
                
            GridLayout:
                id: login_screen_layout
                rows: 5
                size_hint: .9, 1
                pos_hint: {"center_x":0.5, "center_y":0.43}
                padding: "15dp"
                spacing: "10dp"
                MDCard:
                    pos_hint: {"center_x":.5, "top":.9}
                    size_hint_y: None
                    height: email_field.height
                    elevation: 3
                    padding: "6dp", "0dp"
                    MDTextField:
                        id: email_field
                        hint_text: "email"
                        helper_text: "Invalid"
                        helper_text_mode: "on_error"
                        icon_left: "account"
                        on_height: root.height = self.height

                MDCard:
                    pos_hint: {"center_x":.5, "top":0.68}
                    size_hint_y: None
                    height: username_field.height
                    elevation: 3
                    padding: "6dp", "0dp"
                    MDTextField:
                        id: username_field
                        hint_text: "username"
                        helper_text: "Invalid"
                        helper_text_mode: "on_error"
                        icon_left: "account"
                        on_height: root.height = self.height

                MDCard:
                    pos_hint: {"center_x":.5, "top":.45}
                    size_hint_y: None
                    height: password_field.height
                    elevation: 3
                    padding: "6dp", "0dp"
                    MDTextField:
                        id: password_field
                        hint_text: "password"
                        password: True
                        icon_left: "key-variant"
                        on_height: root.height = self.height
                
                MDCard:
                    pos_hint: {"center_x":.5, "top":.23}
                    size_hint_y: None
                    height: password_field.height
                    elevation: 3
                    padding: "6dp", "0dp"
                    MDTextField:
                        id: repeat_password_field
                        hint_text: "repeat password"
                        password: True
                        icon_left: "key-variant"
                        on_height: root.height = self.height

                MDRaisedButton:
                    id: login_button
                    text: "Register"
                    size_hint: .95, None
                    pos_hint: {"center_x":.5, "top":.1}
                    md_bg_color: app.theme_cls.primary_color
